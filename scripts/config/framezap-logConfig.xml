<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<!-- Using / instead of \ as win7 supports it. Also logs folder is not prefixed with it, since app.home will be -->
        <File>${app.home}logs/framezap.log</File>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>${app.home}logs/framezap.%i.log.zip</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>9</MaxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>5MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="OFF">
        <appender-ref ref="FILE"/>
    </root>
    <logger name="com.pixelsimple" level="OFF">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- non pixelsimple loggers -->
    <logger name="org.eclipse.jetty" level="OFF">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>